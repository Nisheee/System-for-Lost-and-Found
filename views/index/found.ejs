    <center>



        <div class="container-fluid" style="margin-top: -900px">
            <div align="center">
                <form>
                    

                    <%if(result[0]!=null) {%>
                    <td> <a href="/index/catagory/found/<%=prevpage%>" class="btn btn-primary previous round" type="submit"><</a> </td>
                    <%for(var i=0;i<48;i++){%>
                    &emsp; 
