}

.round {
    border-radius: 50%;
}


    /*TOP NAV*/
    .topnav {
        overflow: hidden;
        background-color: #333;
        width: 24%;
        height: 55px;
        margin: auto;
    }

    .topnav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 8px 16px;
        text-decoration: none;
        font-size: 17px;
        height: 39px;
        width: 100px;
        text-decoration:none;
        text-shadow:1px 1px 3px rgba(0,0,0,0.3);


    }

    .topnav a:hover {
        color:#f1f2f3;
    }

    .topnav a.active {
        background-color: #801BA6;
        color: white;

        

        
    </style>

 </head>
 <body id="index">


    <header>
        <% include ../partials/header %>
    </header>

