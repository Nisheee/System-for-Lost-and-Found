 <!DOCTYPE html>
 <html>
 <head>
 	<title>System for Lost and Found People</title>
 	<% include ../partials/head %>

 	<style>
 	img {
 		display: block;
 		margin-left: auto;
 		margin-right: auto;
 	}

 	/*TOP NAV*/
 	.topnav {
 		overflow: hidden;
 		background-color: #333;
 		width: 35%;
 		height: 55px;
 		margin: auto;
 	}

 	.topnav a {
 		float: left;
 		color: #f2f2f2;
 		text-align: center;
 		padding: 8px 16px;
 		text-decoration: none;
 		font-size: 17px;
 		height: 39px;
 		width: 100px;
 		text-decoration:none;
  		text-shadow:1px 1px 3px rgba(0,0,0,0.3);
  

 	}

 	.topnav a:hover {
  		color:#f1f2f3;
 	}

 	.topnav a.active {
 		background-color: #801BA6;
 		color: white;
 		
 	</style>

 </head>
 <body id="index">


 	<header>
 		<% include ../partials/header %>
 	</header>

 	<div class="topnav" >
 			<a class="active" style="margin-left:30px; margin-top: 7px;" href="/index">All</a>

 			<form method="post" action="/index/catagorysearch" class="navbar-form navbar-left" >
 				<div class="form-group">
 					
 				</div>
 				<button type="submit" value="lost" id="catsearch" name="catsearch" class="Bbutton" style="width: 98px ; margin-top: -20px; margin-left: 5px;">Lost</button>
 			</form>

 			<form method="post" action="/index/catagorysearch" class="navbar-form navbar-left" >
 				<div class="form-group">
 					
 				</div>
 				<button type="submit" value="found" id="catsearch" name="catsearch" class="Bbutton" style="width: 98px; margin-top: -20px;margin-left: -20px; ">Found</button>
 			</form>

 		</div>
 	<img src="https://i.imgur.com/qrdYYls.jpg" alt="bg" style="width: 99%; margin-top: 10px; ">
 	<img src="https://i.imgur.com/qrdYYls.jpg" alt="bg" style="width: 99%; margin-top: 10px; ">

 	<center>


 		<div class="container-fluid" style="margin-top: -1880px">

 			<div class="container-fluid" >
 				<div class="row">

 					<div class="col-md-15 mainresult">				
 						<div id="wrap">
 							<div id="columns" class="columns_4">
 								<%if(typeof result!=='undefined'){%>
 								<%for(var i=0;i<result.length;i++){%>

 								<a href="/index/productdetails/<%=result[i].id%>">
 									<figure>
 										<img src = "https://i.imgur.com/s0nNyme.jpg">
 										<!-- <img src = <%=result[i].image%> > -->
 										<figcaption><%=result[i].lost_name%></figcaption>
 										<p>Age: <%=result[i].age%></p>
 										<span class="price">Last Located: <%=result[i].last_located%></span>
 										<a href="/index/productdetails/<%=result[i].id%>" class="button" type="submit">Contact</a> 
 									</figure>
 								</a>	


 								%>
 								<%}%>
 								<%}%>



 								<% if(typeof errorMessage !== 'undefined'){ %>
 								<div class="panel panel-warning">
 									<h1 class="text-center text-danger"><span class="glyphicon glyphicon-search text-center"></span><br><%= errorMessage.message %></h1>
 								</div>
 								<% } %>

 							</div>
 						</div>

 					</div>

 				</div>
 			</div>


 			<hr>
 			<footer class="bg-dark text-white">
 				<% include ../partials/footer %>
 			</footer>
 		</body>	
 		</html>