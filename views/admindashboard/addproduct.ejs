<!DOCTYPE html>
<html>
<head>
	<title>Post</title>
	<% include ../partials/head %>

	<style>
 	img {
 		display: block;
 		margin-left: auto;
 		margin-right: auto;
 		border-radius:8px;
 	
}
.fileContainer {
    overflow: hidden;
    position: relative;
}

.fileContainer [type=file] {
    cursor: inherit;
    display: block;
    font-size: 999px;
    filter: alpha(opacity=0);
    min-height: 100%;
    min-width: 100%;
    opacity: 0;
    position: absolute;
    right: 0;
    text-align: right;
    top: 0;
}

div.polaroid {
  background-color: white;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  border-radius:8px;
  padding:4px;
  background-image: url("img_tree.gif"), url("paper.gif");
}


</style>
</head>
<body id="adminlogin">

	<header>
		<% include ../partials/adminHeader%>
	</header>


	<div class="container font" style="margin-top: 1%;">
		<div class="row">
			<div class="col-md-5 cal-md-offset-2" style="color:white">
				<h1><strong>Enter Lost Person's descritions</strong></h1>
				<div class="container" style="margin-left:80px;">
															    
							    <form action="/admindashboard/upload" method="POST" enctype="multipart/form-data">

							        <br>
							        <label>Image</label>
							        <%= typeof msg != 'undefined' ? msg : '' %>
							        
							        <input  name="myImage" type="file" class="btn-primary" style="width:255px;">
							      	<button style="margin-left:80px;" class="Submitbutton">Add To Form</button>
							      	<br>
							      	

							      	<div class="polaroid" style="width: 260px; height:260px;">
							      	  <img src ="http://www.personalbrandingblog.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640-300x300.png" style="width:250px;height:250px">
							      	  <img src="<%= typeof file != 'undefined' ? file : '' %>" class="responsive-img" style="margin-top:-250px;width:250px;height:250px">
							      	  
							      	</div>
							    </form>
    
							    </div> 
				
							    <br><br>
				<div class="tab-content">
					<div id="home" class="tab-pane fade in active" style="color: white;">

						<% if(typeof errors !== 'undefined'){ %>
						<div class="alert alert-danger">
							<% for(var i = 0; i < errors.length; i++){ %>
							<p>*<%= errors[i].message %></p>
							<% } %>
						</div>
						<% } %>


						<form method="post" action="/admindashboard/addproduct">
							<div class="form-group font">
								<label for="productname" class="font">Person's Name:</label>
								<input type="text" class="form-control font" id="productname" name="productname">
							</div>
							
							<div class="form-group font">
								<label for="price" class="font">Age:</label>
								<input type="text" class="form-control font" id="price" name="price">
							</div>
							
							<div class="form-group">
										<label for="quantity" class="font">Image:</label>
										<input type="text" value="<%= typeof file != 'undefined' ? file : '' %>"  class="form-control font" id="quentity" name="quantity">
									</div>
							
							<div class="form-group">
								<label for="catagory" class="font">Last_located:</label>
								<input type="text" class="form-control font" id="catagory" name="catagory">
							</div>

							<div class="form-group">
								<label for="origin" class="font">Origin:</label>
								<input type="text" class="form-control font" id="origin" name="origin">
							</div>

							<div class="form-group">
								<label for="category" class="font">Category:</label>
								<select style="height: 35px ;color: grey;" id="category" name="category" >
									<option value="lost">Lost</option>
									<option value="found">Found</option>
								</select>
							</div>

							<div class="form-group">
								<label for="agent_name" class="font">Agent Name:</label>
								<input type="text" class="form-control font" id="agent_name" name="agent_name">
							</div>

							<div class="form-group">
								<label for="details" class="font">Contact:</label>
								<textarea class="form-control font" id="details" name="details"></textarea>
							</div>

							<!-- <input type="submit" class="btn btn-primary btn-lg font" value="Submit"> -->
							<button type="submit" class="btn btn-primary btn-lg font" style="width: 100%;" id="submit">Add</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>